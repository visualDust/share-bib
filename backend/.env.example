# ShareBib - Environment Configuration
# Copy this file to .env and customize for your deployment

# Service ports
BACKEND_PORT=11550
FRONTEND_PORT=11551

# Allowed hosts (comma-separated, leave empty for localhost only)
# Required for production deployments with custom domains
# Example: ALLOWED_HOSTS=papers.example.com,papers.example.org
ALLOWED_HOSTS=

# JWT secret key (leave empty to auto-generate on first run)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=

# Auth type: "simple" or "oauth"
AUTH_TYPE=simple

# Admin username (set automatically by setup flow)
ADMIN_USERNAME=

# ============================================
# OAuth Configuration (if AUTH_TYPE=oauth)
# ============================================

# OAuth client credentials
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# OAuth endpoints
OAUTH_AUTHORIZE_URL=
OAUTH_TOKEN_URL=
OAUTH_USERINFO_URL=

# OAuth callback URL
OAUTH_REDIRECT_URI=http://localhost:11551/api/auth/oauth/callback

# OAuth scopes (comma-separated)
OAUTH_SCOPES=openid,profile,email

# OAuth admin group name
OAUTH_ADMIN_GROUP=admins
